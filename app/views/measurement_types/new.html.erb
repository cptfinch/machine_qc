<h1>New measurement_type</h1>

<%= error_messages_for :measurement_type %>

<% form_for([@category,@measurement_type]) do |f| %>
  <p>
    Category<br /> 
    <%= 
      collection_select(:measurement_type, :category_id, @categories, :id, :name, {:prompt => true})
    %>
  </p>

  <p>
    <b>Name</b><br />
    <%= f.text_field :name %>
  </p>

  <p>
    <b>Description</b><br />
    <%= f.text_area :description %>
  </p>

  <p>
    <%= f.submit "Create" %>
  </p>
<% end %>

<%= link_to 'Back', category_measurement_types_path %>
