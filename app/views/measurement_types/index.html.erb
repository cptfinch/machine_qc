<h1>Listing measurement_types</h1>

<table>
  <tr>
    <th>Category</th>
    <th>Name</th>
    <th>Description</th>
  </tr>

<% for measurement_type in @measurement_types %>
  <tr>
    <td><%=h measurement_type.category_id %></td>
    <td><%=h measurement_type.name %></td>
    <td><%=h measurement_type.description %></td>
    <td><%= link_to 'Show', measurement_type %></td>
    <td><%= link_to 'Edit', edit_measurement_type_path(measurement_type) %></td>
    <td><%= link_to 'Destroy', measurement_type, :confirm => 'Are you sure?', :method => :delete %></td>
  </tr>
<% end %>
</table>

<br />

